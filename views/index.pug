    script.
      let checkScroll = function(){
        const logoDiv = document.getElementById("logo-div");
        if($(document).scrollTop() >= ($("#jumbotron").height()-100)) {
          $("nav").addClass("nav-after-scroll");
            $("nav a").addClass("nav-a-after-scroll");
            logoDiv.className= "logo-div-white";
        }
        else  {         

           logoDiv.className="logo-div-black";           
          $("nav").removeClass("nav-after-scroll")
            $("nav a").removeClass("nav-a-after-scroll")
        }
      }
      $(document).on("mousewheel", checkScroll);
      $(document).ready(checkScroll);

      const closeSubscribeTab  =  document.getElementById("close-subscribe-button");
      closeSubscribeTab.addEventListener("click",()=>{

        const updateSubscriptionTab = document.getElementById("subsciption-update");
        updateSubscriptionTab.className = "update-div-alternate";

        const updateSubscriptionShortenedTab = document.getElementById("update-shortened");
        updateSubscriptionShortenedTab.className = "update-div-shortened-alternate";

      });
      const updateSubscriptionShortenedTab = document.getElementById("update-shortened");
      updateSubscriptionShortenedTab.addEventListener("click",()=>{
        const updateSubscriptionTab = document.getElementById("subsciption-update");
        updateSubscriptionTab.className = "update-div";
        const updateSubscriptionShortenedTab = document.getElementById("update-shortened");
        updateSubscriptionShortenedTab.className = "update-div-shortened";
        const updateContentSubscribeEmailDiv = document.getElementById("update-contents-subcribe-email");
        const updateContentSubscribeButton = document.getElementById("update-contents-subscribe");
        updateContentSubscribeEmailDiv.className="update-div-contents-subscribe-email-alternate"
        updateContentSubscribeButton.className= "update-div-contents-subscribe-alternate";
      });
      const updateContentSubscribeButton = document.getElementById("update-contents-subscribe");
      updateContentSubscribeButton.addEventListener("click",()=>{

        const updateContentSubscribeEmailDiv= document.getElementById("update-contents-subcribe-email");
        updateContentSubscribeEmailDiv.className="update-div-contents-subscribe-email-alternate";
        updateContentSubscribeButton.className= "update-div-contents-subscribe-alternate"
      });
      const updateContentSubscribeEmailButton = document.getElementById("subscribe-button");
      updateContentSubscribeEmailButton.addEventListener("click",()=>{
        let email = document.getElementById("subcribe-email-input").value
        if (email!==""){
          $.post(`/api/user/subscribe`,{email:email},function(res){
              alert(`"${email}" subscribed. Thank you for subscribing`);
              document.getElementById("subcribe-email-input").value = ""

          })
        }else{


        }
        const updateContentSubscribeEmailDiv = document.getElementById("update-contents-subcribe-email");
        updateContentSubscribeEmailDiv.className="update-div-contents-subscribe-email"
        updateContentSubscribeButton.className= "update-div-contents-subscribe"

      }) 

      var hamburgerMenu = document.getElementById("nav-hamburger-menu");
      if (hamburgerMenu){  
        hamburgerMenu.addEventListener("click",()=>{
          var mobileMenuLinks = document.getElementById("mobile-links");
          if (mobileMenuLinks){
            mobileMenuLinks.classList.toggle("collapsed-links");
          }
        });
      }
